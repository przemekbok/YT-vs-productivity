{
  "manifest_version": 2,
  "name": "YTBlocker",
  "version": "1.0",

  "description": "Block youtube for certain time, enables choosen playlists",

  "icons": {
    "32": "icons/ytb-base-32.png"
  },

  "background": {
    "scripts": ["scripts/background.js"]
  },

  "permissions": [
    "*://*/*",
    "webNavigation",
    "webRequest",
    "activeTab",
    "tabs",
    "storage"
  ],

  "options_ui": {
    "page": "option/whitelist.html"
  },

  "browser_action": {
    "default_icon": "icons/ytb-base-32.png",
    "default_title": "YT Blocker",
    "default_popup": "popup/popup.html"
  }
}
